<!doctype html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= @title %> - wiki</title>
    <link rel="stylesheet" href="/a/git-wiki.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="/print.css" type="text/css" media="print" />
    <!-- link rel="stylesheet" href="/style.css" type="text/css" media="handheld" /--><!-- TODO-->
    <!-- link rel="stylesheet" href="/code.css" type="text/css" media="screen" /-->
    <script src="/app.js"></script>
    <script src="/jquery.min.js"></script>
    <link rel="icon" type="image/png" href="/icon.png" />
    <!--script src="/jeditable.min.js"></script-->
    <meta name="viewport" content="width=device-width" />
    <% yield_content :head %>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="nav_link">home</a>
        <%= @menu.body rescue nil %>
        <% unless @no_search_in_header %>
          <form method="get" action="/a/search" id='search-form'>
            <input type="search" id="search_field" name="q" size="30" placeholder="search... [alt+s]" accesskey="S" autofocus value="<%=@query %>"/>
          </form>
          <% end %>
        <ul><li><a href="/wiki">wiki</a>
          <ul><li><a href="/a/branches" class="nav_link">branches</a></li>
              <li><a href="/a/history" class="nav_link">history</a></li>
              <li><a href="/a/list" class="nav_link">pages</a></li>
              <li><a href="/a/tarball" class="nav_link">export</a></li>
            </ul></li>
        </ul>
        <%= yield_content :nav %>
      </nav>
      <h1><%= @title %></h1>
    </header>
    <main role=”main”><%= yield %></main>
    <footer>powered by a <a href="http://github.com/sr/git-wiki/network">git-wiki</a> fork</footer>
  </body>
</html>
