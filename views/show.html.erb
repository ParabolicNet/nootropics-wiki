<% content_for :nav do %>
  <a href="/h/<%= @page.name %>">history</a>
  <% unless params[:rev] %>
    <a href="/e/<%= @page.name %>">edit</a>
  <% end %>
<% end %>

<article>

  <aside>
    <% if params[:rev] %>
      <a href="/<%= @page.name %>">current version</a><br/>
      <% if @page.next_commit %>
       <a href="/h/<%= @page.name %>/<%= @page.next_commit %>" rel='next'>newer version</a>
      <% else %>
        <span>newer version</span>
      <% end %>
      <br/>
      <% if @page.previous_commit %>
        <a href="/h/<%= @page.name %>/<%= @page.previous_commit %>" rel='prev'>previous version</a>
      <% else %>
        <span>previous version</span>
      <% end %>
    <% end %>

    <section class="details">
      <script type="text/javascript">
        document.write(time_ago_in_words(<%= @page.updated_at.to_json %>) + ' ago');
      </script>
      <br />
      <%= $repo.current_branch %> branch
    </section>

    <section class="context">
       <% if @page.name =~ /\d\d\d\d-\d\d-\d\d/ %>
         <% require 'date'; date = Date.parse(@page.name) %>
         <a href="/<%= date.prev_day %>" >previous day</a>
         &bull; <a href="/<%= date.next_day %>">next day</a>
       <% end %>
    </section>
  </aside>

  <header>
    <% if @page.name =~ /\d\d\d\d-\d\d-\d\d/ %>
      <% require 'date'; date = Date.parse(@page.name) %>
      <h2><time datetime="<%= date %>"><%= date.strftime("%A %e %B %Y") %></time></h2>
    <% end %>
  </header>

  <%= @page.body %>
</article>
