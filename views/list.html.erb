<article>
  <% if @pages.empty? %>
    <h1>No pages yet</h1>
  <% else %>
    <div class="content">
      <ul>
        <% @pages.each do |page| %>
          <li>
            <strong><a href="/<%= page.name %>"><%= page.nice_name %></a></strong>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</article>
